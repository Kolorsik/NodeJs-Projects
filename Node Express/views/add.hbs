<h1>Add course</h1>

<form action="/add" method="post">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required>
          <label for="title">Course name</label>
          <span class="helper-text" data-error="Enter the title of course"></span>
    </div>

    <div class="input-field">
          <input id="price" name="price" type="number" class="validate" required min="1">
          <label for="price">Course price</label>
          <span class="helper-text" data-error="Enter the price of course"></span>
    </div>

    <div class="input-field">
          <input id="img" name="img" type="text" class="validate" required>
          <label for="img">Picure URL</label>
          <span class="helper-text" data-error="Enter the picture URL"></span>
    </div>

    <button class="btn btn-primary">Add this course</button>
</form>